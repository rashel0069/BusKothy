<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Theme.AppCompat.Light.NoActionBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backlogo3"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".ChoseAuthor">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:id="@+id/text1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:hint="Driver"
                android:textAlignment="center"
                android:textColorHint="@color/colorAccent"
                android:textSize="18dp"
                android:clickable="false"/>

            <ImageButton
                android:id="@+id/driverId"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_below="@+id/text1"
                android:layout_gravity="center_horizontal"
                android:layout_weight=".1"
                android:scaleType="centerInside"
                android:src="@drawable/driver" />

            <TextView
                android:id="@+id/text2"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_below="@+id/driverId"
                android:hint="Bus Owner"
                android:textAlignment="center"
                android:textColorHint="@color/colorAccent"
                android:textSize="18dp"
                android:clickable="false"/>

            <ImageButton
                android:id="@+id/ownerID"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_below="@+id/text2"
                android:layout_gravity="center_horizontal"
                android:layout_weight=".1"
                android:scaleType="centerInside"
                android:src="@drawable/owner" />
            <TextView
                android:id="@+id/text3"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_below="@+id/ownerID"
                android:hint="Admin"
                android:textAlignment="center"
                android:textColorHint="@color/colorAccent"
                android:textSize="18dp"
                android:clickable="false"/>

            <ImageButton
                android:id="@+id/adminID"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_below="@+id/text3"
                android:layout_gravity="center_horizontal"
                android:layout_weight=".1"
                android:scaleType="centerInside"
                android:src="@drawable/admin" />

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>