<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DriverLogin">
    <android.support.design.widget.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/driverBottomNav"
        android:layout_alignParentBottom="true"
        app:itemIconTint="@color/user_nav_items_color"
        app:itemBackground="@color/colorPrimary"
        app:itemTextColor="#ffffff"
        app:menu="@menu/diver_nav_item">

    </android.support.design.widget.BottomNavigationView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/driverBottomNav"
        android:id="@+id/driverframe">

    </FrameLayout>
    <TextView
        android:gravity="center"
        android:background="@color/colorAccent"
        android:textColor="@color/whiteAccent"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/CBusID"/>

</RelativeLayout>