<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserRequestforBus">
    <LinearLayout
        android:id="@+id/layout1"
        android:gravity="center"
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Seats: "
            android:textStyle="bold"
            android:textSize="20dp"/>
        <TextView
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"/>

        <TextView
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Available Seats: "
            android:textSize="20dp"/>
        <TextView
            android:layout_weight="1"
            android:id="@+id/availableSetsID"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="00"
            android:textColor="@color/green"
            android:textSize="20dp"/>

    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:padding="5dp"
        android:layout_below="@+id/layout1"
        android:layout_above="@+id/requestforbookingId"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/ticBusNumId"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Bus Number"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textAlignment="center"/>
        <LinearLayout
            android:gravity="center"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Time: "
                android:textSize="20sp"/>
            <TextView
                android:layout_weight="1"
                android:id="@+id/ticTimeId"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Time"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Date: "
                android:textSize="20sp"/>
            <TextView
                android:layout_weight="1"
                android:id="@+id/ticDateId"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Date"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Route: "
                android:textSize="20sp"/>
            <TextView
                android:layout_weight="1"
                android:id="@+id/ticRouteId"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="#000000"
                android:hint="Route Details"
                android:textSize="20sp"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="20sp"
                android:textAlignment="center"
                android:text="Mobile: "/>
            <EditText
                android:layout_weight="1"
                android:id="@+id/ticMobileId"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:hint="017******89"
                android:textSize="20sp"
                android:textColor="#000000"
                android:maxLength="11"
                android:inputType="phone"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="20sp"
                android:textAlignment="center"
                android:text="From: "/>
            <TextView
                android:id="@+id/stopPickId"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textAlignment="center"
                android:hint="Pick Stop "/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="20sp"
                android:textAlignment="center"
                android:text="TO: "/>
            <TextView
                android:id="@+id/stopDestId"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textAlignment="center"
                android:hint="Desti Stop: "/>

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textAlignment="center"
                android:text="Unit Rent: "/>
            <TextView
                android:id="@+id/farevaluId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textColor="@color/iconcolor"
                android:textAlignment="center"
                android:hint="00"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textAlignment="center"
                android:text="taka"/>

        </LinearLayout>


        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Select Number Of Seats"
            android:textSize="22dp"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"/>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/ticSubID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:clickable="false"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/setnumberId"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="70dp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="1"
                android:textSize="25dp"/>
            <Button
                android:id="@+id/ticAddId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:clickable="false"
                android:textSize="20dp"/>

        </LinearLayout>


    </LinearLayout>
    <Button
        android:layout_margin="25dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/requestforbookingId"
        android:layout_width="match_parent"
        android:background="@drawable/defult_button"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:enabled="false"
        android:text="Request For Booking"/>

</RelativeLayout>